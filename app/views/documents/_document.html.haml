%tr
  %td= document.document_type.name
  %td
    = link_to document.scan.url, target: '_blank' do 
      = image_tag(document.scan.url(:thumb))
  %td.actions
    = link_to edit_child_document_path(@child, document), class: "btn btn-default btn-round", title: "Редактировать" do
      %i.fa.fa-edit
    = link_to child_document_path(@child, document), method: :delete, class: "btn btn-danger btn-round", title: "Удалить", data: { confirm: "Are you shure?" } do
      %i.fa.fa-trash-o