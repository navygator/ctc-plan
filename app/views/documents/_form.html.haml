= f.hidden_field :child_id, {value: params[:child_id] }
.form-group
  = f.label :document_type_id, "Тип", class: "control-label col-md-2" 
  .col-md-4 
    = f.collection_select :document_type_id, DocumentType.all, :id, :name, {}, class: "form-control"
.form-group
  = f.label :scan, "Скан", class: "control-label col-md-2" 
  .col-md-4
    = @document.scan_file_name if @document.scan.present?
    = f.file_field :scan