.form-group
  = f.label :name, "Название", class: "control-label col-md-2" 
  .col-md-4 
    = f.text_field :name, class: 'form-control'
.form-group
  = f.label :started_at, "Открыт:", class: "control-label col-md-2" 
  .col-md-4 
    = f.text_field :started_at, class: "form-control date-field", data: { provide: "datepicker", "date-format" => "dd.mm.yyyy", "date-language" => 'ru-RU'}
  = f.label :closed_at, "Закрыт:", class: "control-label col-md-2" 
  .col-md-4 
    = f.text_field :closed_at, class: "form-control", data: { provide: "datepicker", "date-format" => "dd.mm.yyyy", "date-language" => 'ru-RU' }

- if @department.started_at
  :coffee
    $('#department_started_at').datepicker('setDate', '#{@department.started_at.strftime("%d.%m.%Y")}')
- if @department.closed_at
  :coffee
    $('#department_closed_at').datepicker('setDate', '#{(@department.closed_at).strftime("%d.%m.%Y")}')
